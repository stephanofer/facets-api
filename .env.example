# ===========================================
# Facets API - Environment Configuration
# ===========================================

# App
NODE_ENV="development"
PORT=3000
API_PREFIX="api"
API_VERSION="v1"

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/facets"

# JWT Authentication
JWT_ACCESS_SECRET="your-access-secret-min-32-chars-here"
JWT_REFRESH_SECRET="your-refresh-secret-min-32-chars-here"
JWT_ACCESS_EXPIRES="15m"
JWT_REFRESH_EXPIRES="7d"

# Sentry (optional)
# SENTRY_DSN="https://xxx@sentry.io/xxx"

# CORS (comma-separated origins)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8081"

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# Mailtrap Email Service
# Get your API token from: https://mailtrap.io/api-tokens
MAILTRAP_API_TOKEN="your-mailtrap-api-token"
MAILTRAP_SENDER_EMAIL="noreply@yourdomain.com"
MAILTRAP_SENDER_NAME="Facets"
# Set to true for development/testing (uses sandbox)
MAILTRAP_SANDBOX=true
# Required when MAILTRAP_SANDBOX=true. Get from Mailtrap dashboard.
MAILTRAP_TEST_INBOX_ID=123456
